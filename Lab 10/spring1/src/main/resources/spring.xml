<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id = "triangle" class = "spring1.Triangle">
		<property name = "type" value = "Equilateral" />
	</bean>
	
	<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>

	<bean id="triangler" class="spring1.Triangle">
		<property name="date">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="2018-12-06" />
			</bean>
		</property>
	</bean>
	 <bean id="triangles" class="spring1.Triangle">
        <property name="triangleList">
            <list>
                <value>Right Angle Triangle</value>
                <value>Acute Triangle</value>
               
                
            </list>
      </property>
    </bean>
	
	
</beans>